{
  "name": "excel-data-converter",
  "version": "1.0.0",
  "description": "Excel and CSV data transformation tool",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "concurrently \"npm run build:watch\" \"npm run electron:dev:watch\"",
    "electron:dev:watch": "wait-on dist/main.js && electron . --enable-logging",
    "build": "webpack --mode production",
    "build:watch": "webpack --mode development --watch",
    "electron:dev": "wait-on dist/main.js && electron . --enable-logging",
    "electron:watch": "wait-on dist/main.js && nodemon",
    "clean": "rimraf dist",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "build:win": "electron-builder --win",
    "dist": "npm run build && electron-builder",
    "postinstall": "electron-builder install-app-deps",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "keywords": [
    "excel",
    "csv",
    "data",
    "converter",
    "electron"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "antd": "^5.12.8",
    "exceljs": "^4.4.0",
    "papaparse": "^5.4.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@types/papaparse": "^5.3.14",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "concurrently": "^8.2.2",
    "css-loader": "^6.8.1",
    "electron": "^27.1.3",
    "electron-builder": "^24.9.1",
    "html-webpack-plugin": "^5.6.0",
    "nodemon": "^3.0.2",
    "rimraf": "^5.0.5",
    "style-loader": "^3.3.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.3",
    "wait-on": "^7.2.0",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.company.excel-converter",
    "productName": "Excel Data Converter",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "portable": {
      "artifactName": "Excel-Data-Converter-Portable.exe"
    },
    "extraMetadata": {
      "main": "dist/main.js"
    }
  }
}
